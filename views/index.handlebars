<div class="row mx-auto">
    <img src="/assets/img/Burgers.jpg" id="burger" alt="Burger">
</div>

<div class="row mx-auto">
    <h1 class="mx-auto">Eat-Da-Burger!</h1>
</div>


<div class="row">
    <div class="column mx-auto">
        <ol id="not devoured">
            <h4>Burgers Ready to be devoured</h4>
            {{#each burgers}}
            {{#unless deboured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ol>
    </div>

    <div class="column mx-auto">
        <ol id="devoured">
            <h4>Burgers Already DEVOURED!</h4>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>

<div class="row mx-auto">
    <form class="create-form">
        <div class="form-group">
            <label for="new_burger">New Burger to Devour:</label>
            <input type="text" id="newBurger" name="new_burger">
        </div>
        <button type="submit">Add Burger</button>
    </form>
    <h3>Add a Burger you want to eat and click Add Burger button</h3>
</div>